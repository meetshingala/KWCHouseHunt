<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMMK_GroupProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_shade_1</item>
        <item name="colorSecondaryVariant">@color/blue_shade_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Text color. -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <!-- Window background color. -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SMMK_GroupProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SMMK_GroupProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SMMK_GroupProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
